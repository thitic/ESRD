@model ESRD_Sample01.TypeOfSample

@{
    ViewBag.Title = "Create";
}

<h2>เพิ่มตัวอย่าง</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="mx-auto">
            <div class="container-fluid">
                ประเภทตัวอย่าง
                <div class="col-sm">
                    @Html.RadioButtonFor(model => model.ChemicalFertilizer, "ปุ๋ยเคมี")
                    ปุ๋ยเคมี
                    @Html.RadioButtonFor(model => model.OrganicFertilizer, "ปุ๋ยอินทรีย์")
                    ปุ๋ยอินทรีย์
                    @Html.RadioButtonFor(model => model.ChemicalOrganicFertilizer, "ปุ๋ยอินทรีย์เคมี")
                    ปุ๋ยอินทรีย์เคมี
                    @Html.RadioButtonFor(model => model.Water, "น้ำ")
                    น้ำ
                    @Html.RadioButtonFor(model => model.Soil, "ดิน")
                    ดิน
                    @Html.RadioButtonFor(model => model.Ethanol, "เอทานอล")
                    เอทานอล
                    อื่นๆ(ระบุ)
                    @Html.TextBoxFor(model => model.Other)
                    <div class="col-sm-10">
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="ส่งตัวอย่าง" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
